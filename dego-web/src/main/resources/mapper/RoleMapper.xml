<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dego.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.dego.entity.po.Role">
        <result column="id" property="id" />
        <result column="code" property="code" />
        <result column="name" property="name" />
        <result column="remark" property="remark" />
        <result column="create_time" property="createTime" />
        <result column="is_internal" property="isInternal" />
        <result column="create_user" property="createUser" />
        <result column="create_account" property="createAccount" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        code, name, remark, create_time, is_internal, create_user, create_account
    </sql>
    <select id="selectRoleListByAccount" resultType="com.dego.entity.po.Role">
        select
        r.id, r.code,r.`name`,r.`create_time`,r.`is_internal`,r.`create_account`
        FROM `nt_employee_role_rel` rel
        LEFT JOIN nt_role r
        ON rel.`role_code` = r.`code`
        WHERE account = #{account}

    </select>

</mapper>
